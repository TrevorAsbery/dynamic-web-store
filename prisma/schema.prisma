generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DIRECT_URL")
}

model User {
    id           String     @id @default(uuid())
    email        String     @unique
    passwordHash String
    name         String?
    createdAt    DateTime   @default(now())
    orders       Order[]
    cartItems    CartItem[]
}

model Product {
    id          String     @id @default(uuid())
    name        String
    description String?
    price       Decimal
    stock       Int
    imageUrl    String?
    createdAt   DateTime   @default(now())
    cartItems   CartItem[]
}

model Order {
    id         String   @id @default(uuid())
    user       User     @relation(fields: [userId], references: [id])
    userId     String
    totalPrice Decimal
    status     String   @default("pending")
    createdAt  DateTime @default(now())
}

model CartItem {
    id        String  @id @default(uuid())
    user      User    @relation(fields: [userId], references: [id])
    userId    String
    product   Product @relation(fields: [productId], references: [id])
    productId String
    quantity  Int     @default(1)
}
